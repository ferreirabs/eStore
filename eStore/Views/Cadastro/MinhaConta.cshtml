@{
    ViewBag.Title = "MeuCadastro";
    Layout = "~/Views/Shared/LayoutLoja.cshtml";
}

@if (Session["nome_comprador"] == null)
{
    <div class="registration">

        <div class="registration_left">
            <h2>Novo Comprador?</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                
                @Html.ValidationMessage("ErroSenha")
                
            }
            
            <!-- [if IE]
                < link rel='stylesheet' type='text/css' href='ie.css'/>
             [endif] -->
            <!-- [if lt IE 7]>
                < link rel='stylesheet' type='text/css' href='ie6.css'/>
            <! [endif] -->
            <script>
                (function () {

                    // Create input element for testing
                    var inputs = document.createElement('input');

                    // Create the supports object
                    var supports = {};

                    supports.autofocus = 'autofocus' in inputs;
                    supports.required = 'required' in inputs;
                    supports.placeholder = 'placeholder' in inputs;

                    // Fallback for autofocus attribute
                    if (!supports.autofocus) {

                    }

                    // Fallback for required attribute
                    if (!supports.required) {

                    }

                    // Fallback for placeholder attribute
                    if (!supports.placeholder) {

                    }

                    // Change text inside send button on submit
                    var send = document.getElementById('register-submit');
                    if (send) {
                        send.onclick = function () {
                            this.innerHTML = '...Enviando';
                        }
                    }

                })();
            </script>
            <div class="registration_form">
                <!-- Form -->
                @using (Html.BeginForm("Cadastrar", "Cadastro", FormMethod.Post))
                {
                    <div>
                        <label>
                            <input placeholder="nome" name="nome" type="text" tabindex="1" required="" autofocus="">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input placeholder="sobrenome" name="sobrenome" type="text" tabindex="2" required="" autofocus="">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input placeholder="email" name="email" type="email" tabindex="3" required="">
                        </label>
                    </div>
                    <div class="sky-form">
                        <div class="sky_form1">
                            <ul>
                                <li><label class="radio left"><input type="radio" name="sexo" checked=""><i></i>Masculino</label></li>
                                <li><label class="radio"><input type="radio" name="sexo"><i></i>Feminino</label></li>
                                <div class="clearfix"></div>
                            </ul>
                        </div>
                    </div>
                    <div>
                        <label>
                            <input placeholder="senha" name="senha" type="password" tabindex="4" required="">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input placeholder="confirmar senha" name="conf_senha" type="password" tabindex="4" required="">
                        </label>
                    </div>
                    <div>
                        <input type="submit" value="criar conta" id="register-submit">
                    </div>
                
                <!-- /Form -->
                }
            </div>
        </div>
        <div class="registration_left">
            <h2>Já Tenho Cadastro</h2>
            <div class="registration_form">
                <!-- Form -->
                @using (Html.BeginForm("Login", "Cadastro", FormMethod.Post))
                {

                    <div>
                        <label>
                            <input placeholder="email" name="email" type="email" tabindex="3" required="">
                        </label>
                    </div>
                    <div>
                        <label>
                            <input placeholder="senha" name="senha" type="password" tabindex="4" required="">
                        </label>
                    </div>
                    <div>
                        <input type="submit" value="login" id="register-submit">
                    </div>
                    <div class="forget">
                        <a href="#">esqueceu sua senha?</a>
                    </div>

                }
                <!-- /Form -->
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}
else
{
    <div class="registration">
        <div class="registration_left">
            <h2>Meus Pedidos</h2>
            <!-- [if IE]
            < link rel='stylesheet' type='text/css' href='ie.css'/>
             [endif] -->
                <!-- [if lt IE 7]>
                < link rel='stylesheet' type='text/css' href='ie6.css'/>
            <! [endif] -->
            <div class="registration_form">
               Lista de Pedidos
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
}

