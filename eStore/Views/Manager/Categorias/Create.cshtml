@model eStore.Model.ModelCategoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/LayoutManager.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Gerenciar Categorias</title>
</head>
<body>
    <br />
    <a href="@Url.Action("Index","Manager")">
        <img src="@Url.Content("~/Assets/Manager/")images/home.png" />
    </a>
    <span class="manager_migalha">
        @Request.Url.LocalPath.Replace("/", " ")
    </span>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <!--<div class="mensagem_erro">
            @Html.ValidationMessage("CustomError")
        </div>-->
        <div class="form-horizontal">
            <div class="titulo_pagina">Criar Nova Categoria</div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="input_cadastro">
                @Html.LabelFor(model => model.nome, htmlAttributes: new { @class = "control-label col-md-2"})
                <div class="col-md-30">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control", @size = "100" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
                <span class="help_tip">Nome que será exibido na loja</span>
            </div>
            <div class="input_cadastro">
                @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                </div>
                <span class="help_tip">Código da Categoria</span>
            </div>
            <div class="input_cadastro">
                @Html.LabelFor(model => model.ordem, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ordem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ordem, "", new { @class = "text-danger" })
                </div>
                <span class="help_tip">Define a ordem de exibição</span>
            </div>
            <div>
                <div style="text-align:left;float:left;">
                    <div class="">
                        <input type="submit" value="CRIAR CATEGORIA" class="botao_verde" />
                    </div>
                </div>

                <div style="text-align:right;">
                    <a href="@Url.Action("GerenciarCategorias", "Manager")">
                        <div class="botao_azul">
                            VOLTAR
                        </div>
                    </a>
                </div>
            </div>
        </div>
    }
    
</body>