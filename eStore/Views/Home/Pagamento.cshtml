@model eStore.ModelView.ModelPagamento


@{
    ViewBag.Title = "Pagamento";
    Layout = "~/Views/Shared/LayoutLoja.cshtml";
}

<link rel="stylesheet" href="@Url.Content("~/Assets/Loja/Pagamento/")css/style.css">
@using (Html.BeginForm("FecharCompra", "Pagamento", FormMethod.Post, Model))
{
<div style="background-color:#fafbfd;height: 550px;">

    <div style="margin: 5px 0px;padding:0px 10px;">
        <div style="width: 500px;height: 350px;float: left;margin: 45px 25px;">
            <div class="container_busca_titulo" style="    text-align: center;background-color: #1185b9;color: #fff;width: 100%;height: 50px;font-size: 20px;margin: 10px 0px;padding: 15px;">
                <bold>Pagamento</bold>
            </div>
            <div style="border-bottom: solid 8px #4cb1cf;width: 100%;height: 100%;background-color: #fff;">
                <div style="text-align: center;">
                    <img src="@Url.Content("~/Assets/Loja/Pagamento/images/")cartoes.png" />
                    <div class="checkout">
                        <p>
                            <input type="text" name="cartao_cc_name" class="checkout-input checkout-name" placeholder="Nome Completo" autofocus>
                        </p>
                        <p>
                            <input type="text" name="cc_emissor" class="checkout-input checkout-exp" style="width:150px;" placeholder="Emissor">
                            <input type="text" name="cc_mes" class="checkout-input checkout-exp" placeholder="Mês">
                            <input type="text" name="cc_ano" class="checkout-input checkout-exp" placeholder="Ano">
                        </p>
                        <p>
                            <input type="text" name="cc_number" class="checkout-input checkout-card" placeholder="4111 1111 1111 1111">
                            <input type="text" name="cc_cvc" class="checkout-input checkout-cvc" placeholder="cvc">
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

     <div style="margin: 5px 0px;padding:0px 10px;">
         <div style="width: 500px;height: 100%;float: left;margin: 45px 25px;">
             <div class="container_busca_titulo" style="    text-align: center;background-color: #1185b9;color: #fff;width: 100%;height: 50px;font-size: 20px;margin: 10px 0px;padding: 15px;">
                 <bold>Detalhes da Compra</bold>
             </div>
             <div style="border-bottom: solid 8px #4cb1cf;width: 100%;height: 100%;background-color: #fff;">
                <div style="padding: 40px 50px;font-size: 20px !important;color: #808080 !important;">
                        <div class="cart-details" style="margin-bottom: 20px;border-bottom: 1px solid #DDD9D9;padding-bottom: 10px;">
                            @if (Model != null)
                            {
                                foreach (var item in Model.lista_produtos)
                                {
                                    <div>
                                        <div style="float: left;">
                                            <img src="@Url.Content("~/Assets/Templates/GreTong/")images/image_not_found.jpg" class="img-payment-product-details" alt="">
                                        </div>
                                        <div style="float: left;margin: 10px;">
                                
                                                <span>@Html.DisplayFor(modelItem => item.nome)</span>
                                                <br/>
                                            <span style="font-size:12px;">código: @Html.DisplayFor(modelItem => item.codigo)</span>
                                
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                }
                            }
                        
                        </div>
                    
                  
                        <div class="price-details">
                            <span>Subtotal</span>
                            <span name="preco_carrinho" class="total1">R$ @Html.DisplayFor(model => Model.preco_carrinho)</span>
                            <span>Frete</span>
                            <span name="total_frete" class="total1">R$ @Html.DisplayFor(model => Model.total_frete)</span>
                            <div class="clearfix"></div>
                        </div>
                        <ul class="total_price">
                            <li class="last_price"> TOTAL</li>
                            <li class="last_price"><span>R$ @Html.DisplayFor(model => Model.total)</span></li>
                            <div class="clearfix"> </div>
                        </ul>
                </div>
            </div>
        </div>
    </div>

    <div style="width: 95%;height: 50px; margin: 60px 30px !important;padding: 5px;float: left;" value="COMPRAR" class="checkout-btn">
        <input type="submit" style="background:none;border:none;" value="COMPRAR" />
    </div>
</div>
}
