@model eStore.ModelView.ModelCarrinho


@{
    ViewBag.Title = "Produto";
    Layout = "~/Views/Shared/LayoutLoja.cshtml";
}

<link rel="stylesheet" href="@Url.Content("~/Assets/Loja/Pagamento/")css/style.css">
<div style="background-color:#fafbfd;height: 550px;">
    
     <div style="margin: 5px 0px;padding:0px 10px;">
         <div style="width: 500px;height: 350px;float: left;margin: 45px 25px;">
             <div class="container_busca_titulo" style="    text-align: center;background-color: #4cb1cf;color: #fff;width: 100%;height: 50px;font-size: 20px;margin: 10px 0px;padding: 15px;">
                 <bold>Detalhes da Compra</bold>
             </div>
             <div style="border-bottom: solid 8px #4cb1cf;width: 100%;height: 100%;background-color: #fff;">
                <div style="padding: 40px 50px;font-size: 20px !important;color: #808080 !important;">
                    
                        <div class="price-details">
                            <span>Subtotal</span>
                            <span class="total1">R$ </span>
                            <span>Frete</span>
                            <span class="total1">R$ 150.00</span>
                            <div class="clearfix"></div>
                        </div>
                        <ul class="total_price">
                            <li class="last_price"> TOTAL</li>
                            <li class="last_price"><span>R$ </span></li>
                            <div class="clearfix"> </div>
                        </ul>
                    
                </div>
            </div>
        </div>
    </div>

    <div style="margin: 5px 0px;padding:0px 10px;">
        <div style="width: 500px;height: 350px;float: left;margin: 45px 25px;">
            <div class="container_busca_titulo" style="    text-align: center;background-color: #4cb1cf;color: #fff;width: 100%;height: 50px;font-size: 20px;margin: 10px 0px;padding: 15px;">
                <bold>Pagamento</bold>
            </div>
            <div style="border-bottom: solid 8px #4cb1cf;width: 100%;height: 100%;background-color: #fff;">
                <div style="text-align: center;">
                    <img src="@Url.Content("~/Assets/Loja/Pagamento/images/")cartoes.png" />
                    <form class="checkout">
                        <p>
                            <input type="text" class="checkout-input checkout-name" placeholder="Nome" autofocus>
                            <input type="text" class="checkout-input checkout-exp" placeholder="mm">
                            <input type="text" class="checkout-input checkout-exp" placeholder="yy">
                        </p>
                        <p>
                            <input type="text" class="checkout-input checkout-card" placeholder="4111 1111 1111 1111">
                            <input type="text" class="checkout-input checkout-cvc" placeholder="cvc">
                        </p>
                        <div style="width: 250px;height: 50px;margin: 10px !important;" value="COMPRAR" class="checkout-btn">
                            <a style="color:#fff" href="@Url.Action("MeusPedidos", "Pedidos")">COMPRAR</a>
                        </div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
